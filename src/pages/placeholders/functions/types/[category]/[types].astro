---
import { buildFunctionsSidebar } from "@src/utils/functions-sidebar-utils";
export const { sidebarGroups, pages } = buildFunctionsSidebar("/placeholders/functions/types/");

export async function getStaticPaths() {
   return pages.map((page) => ({
      params: {
         category: page.category.toLowerCase(),
         types: page.label,
      },
      props: {
         desc: page.description,
      },
   }));
}

const { category, types } = Astro.params;
const { desc } = Astro.props;

import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import ReactFnPage from "@src/components/react/functions/ReactFnPage";
---

<StarlightPage
   frontmatter={{ title: `${types}`, description: desc }}
   sidebar={[
      {
         label: "Functions",
         items: sidebarGroups,
      },
   ]}
>
   <ReactFnPage
      client:visible
      fnCategory={category}
      fnName={types}
   />
</StarlightPage>
