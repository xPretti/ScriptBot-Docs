---
const { input = "UNKNOWN" } = Astro.props;
---

<tr class="row">
   <td class="param">{input}</td>
   <td>
      <div class="value"><slot /></div>
   </td>
</tr>

<style>
   .param {
      white-space: nowrap;
      user-select: none;
   }

   .row {
      margin-top: 10px !important;
   }

   .row td {
      padding: 0.2rem 0.5rem 0 0;
      border: none;
      vertical-align: top;
   }

   .value {
      width: fit-content;
      padding: 0 5px;
      border-radius: 5px;
      background-color: var(--my-color-param-value-bg);
      border: 1px solid var(--my-color-param-value-border);
   }

   table tr:nth-child(odd) {
      background-color: #f2f2f2; /* Linhas Ã­mpares */
   }
   table tr:nth-child(even) {
      background-color: #ffffff; /* Linhas pares */
   }
</style>
