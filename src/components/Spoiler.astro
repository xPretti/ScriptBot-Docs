---
const { title = "Spoiler", open = false } = Astro.props;
---

<div class="spoiler-container">
   <details class="spoiler" open={open}>
      <summary class="spoiler-title">{title}</summary>
      <div class="spoiler-content">
         <slot />
      </div>
   </details>
</div>

<!-- Estilos -->
<style>
   .spoiler-container {
      background-color: color-mix(in srgb, var(--my-color-function-description) 50%, transparent 100%);
      padding: 10px;
      border-radius: 5px;
      border: 1px solid var(--my-color-function-description);
   }

   .spoiler {
      border: none;
      padding: 0 0 0 5px;
   }

   .spoiler-title {
      padding: 0;
      margin: 0;
      user-select: none;
   }

   .spoiler[open] .spoiler-title {
      padding: 0;
      margin: 0;
      color: var(--sl-color-accent-high);
   }

   .spoiler-content {
      margin-top: 8px;
   }
</style>
